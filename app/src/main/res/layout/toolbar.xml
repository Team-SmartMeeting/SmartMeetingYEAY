<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >






    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_weight="1"
    >
    <Button

        android:id="@+id/btn_meeting_menu"
        android:layout_width="0.5dp"
        android:layout_weight="2"
        android:layout_gravity="bottom"
        android:layout_height="match_parent"
        android:background="@drawable/button_normal"
        android:fontFamily="sans-serif-black"
        android:textSize="12dp"
        android:textColor="#000000"
        android:drawableTop="@drawable/ic_meeting"
        />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        >
        <Button
            android:id="@+id/btn_contacts_menu"
            android:layout_width="0.5dp"
            android:layout_weight="2"
            android:layout_gravity="bottom"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif-black"
            android:textSize="12dp"
            android:textColor="#000000"
            android:background="@drawable/button_normal"
            android:drawableTop="@drawable/ic_contacts_24px"

        />
        <Button
            android:id="@+id/btn_groupes_menu"
            android:layout_width="0dp"
            android:layout_weight="0"
            android:layout_gravity="bottom"
            android:layout_height="match_parent"
            android:background="@drawable/button_normal"
            android:text=""
            android:textSize="9.5dp"
            />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        >

    <Button
        android:id="@+id/btn_profile_menu"
        android:layout_width="0.5dp"
        android:layout_weight="2"
        android:layout_gravity="bottom"
        android:layout_height="match_parent"
        android:fontFamily="sans-serif-black"
        android:textSize="12dp"
        android:textColor="#000000"
        android:background="@drawable/button_normal"

        android:drawableTop="@drawable/ic_list_24px"
        />

</LinearLayout>
0
</LinearLayout>

